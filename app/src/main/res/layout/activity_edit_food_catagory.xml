<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    android:background="@drawable/rectangle_background"
    android:layout_height="match_parent"
    tools:context=".Edit_foodCatagoryActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Food Catagory"
        android:textSize="30dp"
        android:textColor="#000"
        android:fontFamily="@font/courgette"
        android:layout_marginBottom="25dp"/>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:counterEnabled="true"
        app:helperText="Required">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_categoryname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edit Food Category Name"
            android:maxLength="20"
            android:textColor="#1E1D1D"
            android:textSize="15sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/edit_btnaddcategory"
        android:layout_width="250dp"
        android:layout_height="58dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#000"
        android:fontFamily="@font/courgette"
        android:text="Update Food Category"
        android:textSize="20dp" />


</LinearLayout>